<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Вход</h1> <%# Заменил h1 %>
          <%= form_with url: sessions_path do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "form-label" %> <%# Добавил класс %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %> <%# Добавил классы, placeholder и required %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "form-label" %> <%# Добавил класс %>
              <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %> <%# Добавил классы, placeholder и required %>
            </div>
            <br>
            <%= f.submit 'Войти', class: "btn btn-primary container-fluid" %> <%# Добавил класс %>
          <% end %>
          <p class="mt-3 text-center"> <%# Добавил классы %>
            Нет аккаунта? 
            <%= link_to 'Зарегистрируйтесь', signup_path, class: "link-primary" %> <%# Добавил класс %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

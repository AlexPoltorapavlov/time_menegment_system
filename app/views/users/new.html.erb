<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center">Регистрация</h1>
          <%= form_with model: @user, url: signup_path do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Email", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control", placeholder: "Имя пользователя", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :phone_number, class: "form-label" %>
              <%= f.telephone_field :phone_number, class: "form-control", placeholder: "Номер телефона", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Пароль", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, 'Подтвердите пароль', class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Подтверждение пароля", required: true %>
            </div>
            <%= f.submit 'Зарегистрироваться', class: "btn btn-primary" %>
          <% end %>
          <p class="mt-3 text-center">
            Уже есть аккаунт? 
            <%= link_to 'Войти', login_path, class: "link-primary" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

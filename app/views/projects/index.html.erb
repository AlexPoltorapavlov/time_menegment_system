<%= link_to '+ Новый проект', new_project_path, class: 'btn btn-outline-primary me-2' %>

<h1> Ваши проекты </h1>


<% @projects.each do |project| %>
  <div class='card'>
    <h3 class='card-header'> <%= project.title %> </h3>
    <p class='card-body'>
      <%= project.body %>
    </p>
    <%= link_to 'Открыть', project_path(project), class: 'btn btn-outline-secondary' %>
  </div>
<% end %>

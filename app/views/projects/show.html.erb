
<h3><%= @project.title %> </h3>
<p>
	<%= @project.body %>
</p>
<%= link_to 'Создать задачу', new_project_task_path(@project), class: "btn btn-success" %>
<hr>
<h4>Задачи</h4>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-5">
	<% @project.tasks.each do |task| %>
		<div class="col d-flex align-items-start">
			<div>
				<h3 class="fw-bold mb-0 fs-4 text-body-emphasis"><%= task.title %></h3>
				<p><%= task.body %></p>
				<hr>
				<p>Всего потрачено времени на задачу:</p>
				<p><%= (task.duration / 3600).floor %> ч. <%= ((task.duration % 3600) / 60).floor %> м. <%= task.duration % 60 %> c</p>
				<h4>Добавить время</h4>
				<%= form_with model: task, url: project_task_path(@project, task), method: :patch do |f| %>
					<div>
						<p>Часы</p>
						<%= f.number_field :hours %>
					</div>
					<div>
						<p>Минуты</p>
						<%= f.number_field :minutes %>
					</div>
					<div>
						<p>Секунды</p>
						<%= f.number_field :seconds %>
					</div>
					<%= f.submit 'Добавить время' %>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
